@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center p-5" style="border-radius: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
    <div class="d-flex align-items-center justify-content-between" style="max-width: 1000px; margin: 0 auto;">
        <div class="profile-text w-50" style="text-align: left;">
            <h1 style="font-size: 2.5rem; color: #2c3e50; font-weight: 700;">Hello, I am <span style="color: #3498db;">Liu Yunhao</span> <span class="waving-hand" style="display: inline-block; animation: wave 2.1s infinite; transform-origin: 75% 75%;">👋</span></h1>
            <p style="font-size: 1.2rem; color: #34495e; margin: 1rem 0; text-align: justify;">
                Full-Stack Developer | Tech Explorer | Innovation Practitioner
            </p>
            <p style="color: #34495e; line-height: 1.8; margin-bottom: 2rem; text-align: justify;">
                As a passionate Full-Stack Developer, I specialize in building dynamic and scalable web and mobile applications. With expertise in both front-end and back-end development, I'm dedicated to creating seamless user experiences and robust functionalities.
            </p>
            <div class="d-flex gap-2">
                <a href="/Home/AboutMe" class="btn btn-outline-dark">About me</a>
                <a href="/Home/Contact" class="btn btn-outline-dark">Contact me</a>
            </div>
        </div>
        <div class="profile-image w-50 d-flex justify-content-center">
            <img src="/images/profile-3d.png" alt="3D Profile" style="width: 300px; height: auto;">
        </div>
    </div>
</div>

<style>
@keyframes wave {
    0% { transform: rotate(0deg); }
    10% { transform: rotate(14deg); }
    20% { transform: rotate(-8deg); }
    30% { transform: rotate(14deg); }
    40% { transform: rotate(-4deg); }
    50% { transform: rotate(10deg); }
    60% { transform: rotate(0deg); }
    100% { transform: rotate(0deg); }
}
</style>