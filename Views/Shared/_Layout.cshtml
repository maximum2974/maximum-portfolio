<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Maximum_Portfolio.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .content-wrapper {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header>
            <!-- Navigation bar -->
            <nav class="center-navbar">
                <ul>
                    <li class="@(ViewContext.RouteData.Values["action"] as string == "Index" ? "active" : "")">
                        <a href="/">Home</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"] as string == "AboutMe" ? "active" : "")">
                        <a href="/Home/AboutMe">About Me</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"] as string == "Photography" ? "active" : "")">
                        <a href="/Home/Photography">Photography</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"] as string == "Contact" ? "active" : "")">
                        <a href="/Home/Contact">Contact</a>
                    </li>
                </ul>
            </nav>
        </header>
        
        <!-- Main Content Area -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer border-top py-3" style="background-color: #eae9e5;">
        <div class="container text-center" style="max-width: 600px;">
            <!-- 社交图标 -->
            <div class="mb-2">
                <a href="https://github.com/maximum2974" class="text-dark mx-2 fs-5"><i class="fab fa-github"></i></a>
                <a href="https://www.reddit.com/user/maximum2974/" class="text-dark mx-2 fs-5"><i class="fab fa-reddit"></i></a>
                <a href="https://www.linkedin.com/in/maximum-undefined-b77b8b335/" class="text-dark mx-2 fs-5"><i class="fab fa-linkedin"></i></a>
                <a href="https://x.com/YunhaoLiu12" class="text-dark mx-2 fs-5"><i class="fab fa-x-twitter"></i></a>
                <a href="https://www.instagram.com/maximum2974/?next=%2F" class="text-dark mx-2 fs-5"><i class="fab fa-instagram"></i></a>
            </div>
            <!-- 版权和作者信息 -->
            <div class="footer-copyright mt-2" style="font-family: 'Fira Mono', 'Consolas', 'Menlo', monospace; font-size: 0.9rem; letter-spacing: 0.05em;">
                <div>
                    Designed and developed by Maximum 🧑‍💻
                <div>
                    ALL RIGHTS RESERVED &copy; @DateTime.Now.Year
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
